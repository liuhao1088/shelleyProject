image {
  height: 100%;
  width: 100%;
  vertical-align: middle;
}

.wodeContainer {
  padding-bottom: 120rpx;
}

.header {
  width: 100%;
  height: 240rpx;
  background-color: red;
  display: flex;
  justify-content: center;
  flex-direction: column;
}

.wrap {
  width: 100%;
  height: 100rpx;
  border: 0rpx solid black;
  padding-left: 40rpx;
}

.img-item {
  height: 100%;
  width: 100rpx;
  border: 0rpx solid blue;
  float: left;
}

.nickname {
  height: 100%;
  line-height: 100rpx;
  padding-left: 30rpx;
  font-size: 28rpx;
  float: left;
}

.menu-wode {
  width: 100%;
  height: 200rpx;
  border: 0rpx solid royalblue;
  background-color: #fff;
  display: flex;
}

.menu-item {
  width: 50%;
  height: 100%;
  border: 0rpx solid red;
  display: flex;
  justify-content: center;
  align-items: center;
  
}

.menu-wrap{
  width: 130rpx;
  height: 100rpx;
  vertical-align:middle;
  border: 0rpx solid rosybrown;
}

.icon-item{
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  font-size: 18rpx;
}

.menu-msg{
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  font-size: 28rpx;
}

.poster-item{
  width: 100%;
  height: 360rpx;
  background-color: #bfa;
}

.submenu{
  width: 100%;
  border: 2rpx solid red;
}

.cu-icon{
  margin-right: 10rpx;
  
}