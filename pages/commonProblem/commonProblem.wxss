page {
  background-color: #f0f0f0;
}

button::after{
  border: 0;
}

.bg-green {
  background-color: #39b54a;
  color: white;
}

.cu-chat .cu-item>.main .content:not([class*="bg-"]) {
  background-color: white;
  color: black;
}

.bg {
  color: #0065FF;
  text-decoration: underline;
}

.icon-item {
  height: 80rpx;
  width: 80rpx;
  line-height: 0;
  border: 0rpx solid red;
  position: absolute;
  bottom: 30rpx;
  right: 180rpx;
  animation: drop 1s infinite;
}

image {
  height: 100%;
  width: 100%;
  vertical-align: middle;
}

@keyframes drop {
  0% {
    transform: scale(1.2, 1.2);
  }

  50% {
    transform: scale(1.5, 1.5);
  }

  to {
    transform: scale(1.2, 1.2);
  }
}

/* 客服 */
.customer-wrapper {
  width: 100%;
  height: 100rpx;
  background-color: #fff;
  position: fixed;
  top: 0;
  z-index: 100;
  border: 0rpx solid red;
  padding: 10rpx 30rpx;
  display: flex;
  justify-content: center;
  align-content: center;
  flex-direction: column;
}

.customer-wrap {
  width: 100%;
  height: 100%;
  line-height: 80rpx;
  border: 0rpx solid red;
  display: flex;
}

.img-item {
  height: 100%;
  width: 80rpx;
  border-radius: 50%;
  text-align: center;
  background-color: rgba(46, 113, 196, 0.1);
}

.customer-item {
  flex: 1;
  border: 0rpx solid black;
  font-size: 24rpx;
  padding-left: 20rpx;
}

.customer-but {
  width: 270rpx;
  height: 100%;
  border: 0rpx solid red;

}

.but-wrap {
  height: 60rpx;
  width: 100%;
  border: 0rpx solid black;
  display: flex;
}

button {
  height: 100%;
  width: 100%;
  line-height: 60rpx;
  font-size: 20rpx;
  border-radius: 8rpx;
  padding: 0;
}

.but {
  height: 100%;
  width: 80rpx;
  border: 0rpx solid orange;
}

.but button {
  background-color: rgb(46, 113, 196);
  color: rgb(255, 255, 255);
}

.but-customer {
  flex: 1;
  border: 0rpx solid red;
  padding-left: 20rpx;
}

.but-customer button{
  border: 4rpx solid rgb(46, 113, 196);
  color: rgb(46, 113, 196);
  background-color: #fff;
  
}