.activityPosterContainer{
  height: 100vh;
  width: 100%;
  background: url('https://img14.360buyimg.com/ddimg/jfs/t1/155149/29/12106/644710/5fe94f3eEc37378e2/505ace0773ded202.jpg') no-repeat;
  background-size:100% 100%;
}

.content {
  height: 120rpx;
  color: #fff;
  border-radius: 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 44rpx;
  padding-right: 15rpx;
  border: 2rpx solid rgba(8, 77, 206, 100);
  margin: 0 auto;
  position: absolute;
  bottom: 80rpx;
  left: 0;
  right: 0;
}

.icon-item{
  font-size: 90rpx;
    line-height: 90rpx;
    color: #F0F4F9;
}

.box {
  height: 90rpx;
  border-radius: 10px;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left: 15rpx;
  margin-top: 15rpx;
  animation: gradientBG 1s ease-in infinite;
  background: linear-gradient(90deg, #7149fd 0%, #58b3ff 50%, #7149fd 100%);
  background-size: 200% 100%;
  background-position: 200% 0;
}

@keyframes gradientBG {
  0% {
    background-position: 200% 0;
  }

  100% {
    background-position: 0 0;
  }
}

