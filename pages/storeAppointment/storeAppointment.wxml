<view class="storeAppointmentContainer">
  <view class="banner">
    <swiper indicator-dots autoplay circular style="height:100%;">
      <swiper-item>
        <image class="banner-item" wx:for="{{data.shop_img}}" wx:key="id" src="{{item}}" style="width:100%;" />
      </swiper-item>
    </swiper>
  </view>

  <view class="wrap">
    <view class="wrap-item">
      <view class="wrap-title">
        <view class="title-itme">{{data.shop_name}}</view>
        <view class="wrap-date">营业时间：{{data.start_hour}} - {{data.end_hour}}</view>
        <view class="wrap-tagItem">
          <view class="wrap-starlight"
            style="background-color: rgba(91, 98, 217, 100);border: 2rpx solid rgba(91, 98, 217, 100);text-align: center;">
            认证商家</view>
          <view class="wrap-starlight" style="margin-left: 20rpx;">星级门店</view>
        </view>

      </view>
      <view class="wrap-tag" bindtap="openLocation">
        <view class="title-itme" style="text-align: center;">
          <text class="iconfont icondaohang"></text>
        </view>
        <view class="wrap-date" style="text-align: center;opacity: 1;">地址</view>
      </view>
      <view class="wrap-tag" bindtap="callphone">
        <view class="title-itme" style="text-align: center;">
          <text class="iconfont icondianhua1"></text>
        </view>
        <view class="wrap-date" style="text-align: center;opacity: 1;">电话</view>
        <view class="tag-border"></view>
      </view>
    </view>


  </view>

  <view class="experience-item">
    预约体验
  </view>

  <view class="form-item">
    <view class="form-title">选择商品</view>
    <view class="form-input" bindtap="showModal" data-target="ChooseModal">
      {{nameList}}
    </view>
  </view>
  <view class="form-item" style="margin-top: 4rpx;">
    <view class="form-title">到店时间</view>
    <view class="form-input">
      <!-- <rui-picker slot="flexchild" start="{{startTime}}" end="2999-12-31 00:00" value="{{startTime}}" fields="minute"
        bindchangedatepicker="changeStartTime"></rui-picker> -->
      <picker class='time-picker' mode="multiSelector" bindchange="bindStartMultiPickerChange" bindtap='pickerTap'
        bindcolumnchange="bindMultiPickerColumnChange" value="{{multiIndex}}" range="{{multiArray}}">
        <view class="picker">
          <view class='title'>{{startTime}}</view>
        </view>
      </picker>
    </view>
  </view>

  <view class="experience-item" wx:if="{{data.gift}}" style="background-color: #202937;margin-top: 4rpx;">
    预约好礼
  </view>
  <view class="text-item" wx:if="{{data.gift}}">
    {{data.act[0].content}}
  </view>

</view>

<view class="btn-item">
  <button wx:if="{{isShow}}" style="display:{{reservation==''?'':'none'}}" open-type="getPhoneNumber"
    bindgetphonenumber="getPhoneNumber">预 约</button>
  <button wx:if="{{!isShow}}" style="display:{{reservation==''?'':'none'}}" bindtap="submit">预 约</button>
  <button style="display:{{reservation==''?'none':''}}" bindtap="">已 预 约</button>
</view>

<!-- 选择商品 -->
<view class="cu-modal bottom-modal {{modalName=='ChooseModal'?'show':''}}" bindtap="hideModal">
  <view class="cu-dialog" catchtap style="height: 580rpx;">
    <view class="cu-bar bg-white" style="justify-content: flex-end;height: 80rpx;">
      <view class="action text-green" bindtap="hideModal" style="margin-right: 30rpx;">确定</view>
    </view>
    <view class="grid padding-sm" style="height: 200rpx;padding: 0 30rpx;align-items:flex-end;">
      <view class="cu-img">
        <image class="cu-img" src="{{checkbox[ind].link}}"></image>
      </view>
      <view class="cu-description column">
        <view>产品介绍：{{checkbox[ind].introduce}}</view>
      </view>
    </view>
    <view class="grid col-3 padding-sm">
      <view wx:for="{{checkbox}}" class="padding-xs" wx:key="id">
        <button class="cu-btn orange lg block {{item.checked?'bg-black':'line-black'}}" bindtap="ChooseCheckbox"
          data-value="{{item.value}}" data-index="{{index}}" data-name="{{item.name}}"> {{item.name}}
        </button>
      </view>
    </view>

  </view>
</view>