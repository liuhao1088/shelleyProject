.clear-item {
  width: 90%;
  height: 40rpx;
  margin-top: 20rpx;
  border: 0rpx solid red;
}

.clear-main {
  height: 100%;
  line-height: 40rpx;
  white-space: pre-wrap;
  color: rgba(0, 0, 0, 0.5);
  font-size: 28rpx;
  float: right;
}

.cu-list.menu-avatar {
  width: 100%;
  margin-top: 20rpx;
}

.cu-list.menu-avatar>.cu-item {
  height: 130rpx;
  justify-content: center;
  margin-top: 10rpx;
  background-color: white;
}

.bg-grey {
  background-color: #8799a3;
  color: white;
}

.bg-red {
  background-image: linear-gradient(133deg, #f92643, #e1001f, #ee0049);
  color: white;
}

.message-wrap {
  width: 90%;
  height: 100%;
  color: rgb(16, 16, 16);
  border: 0rpx solid red;
}

.title-item {
  width: 100%;
  height: 44rpx;
  line-height: 44rpx;
  border: 0rpx solid black;
  margin-top: 20rpx;
  display: flex;
  justify-content: space-between;
