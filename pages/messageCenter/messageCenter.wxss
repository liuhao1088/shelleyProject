.title {
  font-size: 32rpx;
  font-weight: bold;
}

.date-item {
  font-size: 20rpx;
}

.mag-item {
  width: 100%;
  height: 34rpx;
  line-height: 34rpx;
  font-size: 24rpx;
  display: block;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-top: 10rpx;
