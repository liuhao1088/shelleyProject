page {
  background-color: #f0f0f0;
}

button::after {
  border: 0;
}

.carAppointmentContainer {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
}

.search {
  width: 90%;
  height: 60rpx;
  background-color: #fff;
  border-radius: 30rpx;
  margin-top: 20rpx;
  display: flex;
}

.search input {
  margin-left: 50rpx;
  height: 100%;
  line-height: 60rpx;
  color: rgba(151, 151, 151, 100);
  flex: 1;
}

.placeholder {
  font-size: 28rpx;
  color: rgba(151, 151, 151, 100);
}

.searchIcon {
  width: 100rpx;
  text-align: center;
  font-size: 30rpx;
  line-height: 60rpx;
  float: right;
  color: rgba(151, 151, 151, 0.5);
}

.wrapper {
  width: 95%;
  border-radius: 10rpx;
  background-color: #fff;
  margin-top: 40rpx;
  padding: 30rpx 20rpx;
}

.wrap {
  width: 100%;
  line-height: 60rpx;
  border: 0rpx solid red;
  display: flex;
}

.wrap-title {
  flex: 1;
  border: 0rpx solid blue;
  font-size: 24rpx;
}

.wrap-tag {
  padding: 0rpx 20rpx;
  height: 100%;
  color: rgb(225, 0, 31);
  font-size: 28rpx;
  border: 0rpx solid black;
}

.wrap-but {
  height: 100%;
  width: 340rpx;
  border: 0rpx solid red;
  float: right;
}

.but {
  width: calc(80%/2);
  height: 100%;
  border: 0rpx solid red;
  float: right;

}

.cu-btn {
  height: 100%;
  width: 100%;
  font-size: 16rpx;
}


.cancel {
  border: 2rpx solid #f92643;
  color: #f92643;
}

.accept {
  background-image: linear-gradient(133deg, #f92643, #e1001f, #ee0049);
  color: rgb(255, 255, 255);
}

.cu-dialog {
  width: 90%;
}

.modal-titleItem {
  width: 100%;
  height: 66rpx;
  line-height: 66rpx;
  border: 0rpx solid red;
  text-align: center;
  font-size: 40rpx;
  margin-top: 52rpx;
  margin-bottom: 20rpx;
}

.modal-titleWrap {
  height: 100%;
  border: 0rpx solid red;
  display: flex;
}

.modal-main {
  width: 65%;
  border: 0rpx solid red;
  margin: auto;
}

.modal-menuItem {
  width: 240rpx;
  height: 100%;
  border-radius: 30rpx;
  background-color: rgba(0, 0, 0, 0.05);
  color: #5b5b5b;
}

.modal-butItem {
  width: 100%;
  height: 110rpx;
  margin-top: 40rpx;
  display: flex;
  border-top: 2rpx solid #ECECED;
}

.modal-but {
  width: 50%;
  height: 100%;
}

.modal-but button {
  height: 100%;
  line-height: 110rpx;
  padding: 0;
  font-weight: 400;
}

.modal-menuWrap {
  width: 100%;
  height: 60rpx;
  border: 0rpx solid black;
  display: flex;
  justify-content: space-between;
}

.menu-item {
  width: 45%;
  height: 100%;
  line-height: 60rpx;
  border-radius: 8rpx;
  background-color: rgb(241, 241, 241);
  color: rgb(136, 136, 136);
  font-size: 22rpx;
  font-weight: bold;
}

.menuWrap-class {
  background-color: rgb(225, 0, 31);
  color: #fff;

}

.menu-tag {
  width: 126rpx;
  height: 100%;
  line-height: 60rpx;
  border-radius: 8rpx 0 0 8rpx;
  background-color: rgb(241, 241, 241);
  color: rgb(136, 136, 136);
  font-size: 22rpx;
  font-weight: bold;
}

.menu-input {
  flex: 1;
  border: 0rpx solid red;
  padding-left: 20rpx;
  border-radius: 0px 8rpx 8rpx 0px;
  border-top: 2rpx solid rgb(241, 241, 241);
  border-bottom: 2rpx solid rgb(241, 241, 241);
  border-right: 2rpx solid rgb(241, 241, 241);
}

.menu-input input {
  width: 100%;
  height: 100%;
  line-height: 60rpx;
  text-align: left;
  font-size: 22rpx;
}