<view class="weui-tab justify-center" style='display:{{cardis}}'>
  <view class="weui-navbar">
    <block wx:for="{{tabs}}" wx:key="*this">
      <view id="{{index}}" style='' class="weui-navbar__item {{activeIndex == index ? 'weui-bar__item_on' : ''}}"
        bindtap="tabClick">
        <view class="weui-navbar__title" style="color:{{item.color}}">{{item.title}}</view>
      </view>
    </block>
    <view class="weui-navbar__slider"
      style="left: {{sliderLeft}}px; transform: translateX({{sliderOffset}}px); -webkit-transform: translateX({{sliderOffset}}px);">
    </view>
  </view>
  <view class="weui-tab__panel">
    <view class="weui-tab__content" hidden="{{activeIndex != 0}}">
      <view class="container">
        <scroll-view scroll-top="{{scrollTop}}" scroll-y="true" style="height:{{scrollHev}}px;" class="list"
          bindscrolltolower="bindDownLoad" bindscrolltoupper="topLoad" bindscroll="scroll">
          <view class='viewbox' bindlongtap='deleteAddr' wx:for="{{list}}" wx:key="*" data-index="{{index}}"
            bindtap="toLookup">
            <view class=''
              style="padding:10rpx 20rpx;border-radius:10rpx;background:orangered;color:white;font-size:20rpx;position:absolute;right:15px;top:15px;"
              data-index="{{index}}">未认证</view>
            <view class='row'>
              <view class='viewbox-number'>店名：{{item.shop_name}}</view>
              <view class='viewbox-remark'></view>
            </view>
            <view class='row'>
              <view class="viewbox-address"><text decode="{{true}}">地址：{{item.address}}</text></view>
            </view>
          </view>

          <view style="height:10px"></view>
        </scroll-view>
      </view>

    </view>

    <view class="weui-tab__content" hidden="{{activeIndex != 1}}">
      <view class="container">
        <scroll-view scroll-top="{{scrollTop}}" scroll-y="true" style="height:{{scrollHev}}px;" class="list"
          bindscrolltolower="abindDownLoad" bindscrolltoupper="topLoad" bindscroll="scroll">
          <view class='viewbox' bindlongtap='' wx:for="{{alreadylist}}" wx:key="*" data-index="{{index}}"
            bindtap="toAlreadyLookup">
            <view class=''
              style="padding:10rpx 20rpx;border-radius:10rpx;background:#5B62D9;color:white;font-size:20rpx;position:absolute;right:15px;top:15px;"
              data-index="{{index}}">已认证</view>
            <view class='row'>
              <view class='viewbox-number'>店名：{{item.shop_name}}</view>
              <view class='viewbox-remark'></view>
            </view>
            <view class='row'>
              <view class="viewbox-address"><text decode="{{true}}">地址：{{item.address}}</text></view>
            </view>
          </view>

          <view style="height:10px"></view>
        </scroll-view>
      </view>
    </view>

  </view>
</view>