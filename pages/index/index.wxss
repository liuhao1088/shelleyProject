.activityPosterContainer {
  height: 100vh;
  width: 100%;
}

button::after{
  border: 0;
}

image {
  height: 100%;
  width: 100%;
  vertical-align: middle;
}

.poster-but {
  width: 40%;
  height: 70rpx;
  position: absolute;
  left: 0;
  right: 0;
  bottom: 250rpx;
  margin: auto;
  animation: drop 1s infinite;
}

@keyframes drop{
  0%{
    transform:scale(1.2,1.2);
  }
  50%{
    transform:scale(1.5,1.5);
  }
  to{
    transform: scale(1.2,1.2);
  }
}

.poster-but::after{
  content: '';
  width: 100%;
  height: 100%;
  border-radius: 50rpx;
  background-color: rgba(255, 202, 23, 0.5);
  position: absolute;
  bottom: -6rpx;
}

.poster-but button {
  height: 100%;
  width: 100%;
  line-height: 70rpx;
  color: #e90a00;
  font-weight: bold;
  font-size: 34rpx;
  border-radius: 50rpx;
  background-image: linear-gradient(90deg, rgb(255, 202, 23) 0%, rgb(255, 235, 101) 100%);
  z-index: 1;
}

/* 问答 */
.padding-xl {
  padding: 0rpx 60rpx;
  padding-bottom: 40rpx;
}

.cu-dialog {
  width: 100%;
  height: 880rpx;
  border: 0rpx solid;
  background-color: unset;
}

.bg-img image {
  height: 100%;
  width: 100%;
  vertical-align: middle;
}

.modal-wrap {
  height: 65%;
  width: 65%;
  border: 0rpx solid black;
  position: absolute;
  top: 270rpx;
  left: 0;
  right: 0;
  bottom: 0;
  margin: auto;
}

.question-item {
  width: 100%;
  border: 0rpx solid rgb(246, 43, 62);
}

.scroll-item {
  width: 100%;
  height: 100%;
  border: 0rpx solid black;
}

.but-item {
  width: 100%;
  height: 68rpx;
  border: 0rpx solid #bfa;
  display: flex;
  justify-content: center;
  margin-bottom: 36rpx;
}

.but-item button {
  width: 50%;
  height: 100%;
  background-image: linear-gradient(180deg, #df2e15, #f1705d, #df2e15);
  color: #fff;
  line-height: 68rpx;
  font-size: 32rpx;
  border-radius: 8rpx;
  transition:all 1s;
}

.title-item {
  width: 100%;
  line-height: 40rpx;
  color: rgba(0, 0, 0, 0.75);
  font-size: 28rpx;
  text-align: left;
  font-weight: bold;
  margin-bottom: 14rpx;
}

.car-lightsItem {
  width: 100%;
  border: 0rpx solid black;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  margin-bottom: 10rpx;
}

.car-lightsBut {
  width: 45%;
  height: 56rpx;
}

.car-lightsBut button {
  height: 100%;
  width: 100%;
  line-height: 56rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
}

.carLightsRed {
  background-color: #B91F09;
  color: rgb(255, 255, 255);
}

.red {
  background-color: rgba(0, 0, 0, 0.2);
}

.close-item {
  width: 100%;
  border: 0rpx solid black;
  color: rgb(221, 186, 51);
  font-size: 24rpx;
}