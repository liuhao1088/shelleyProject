.modal-wrap {
  position: absolute;
  height: 100%;
  width: 100%;
  border: 0rpx solid red;
  padding: 10rpx 50rpx;
}

.icon-item {
  width: 100%;
  height: 60rpx;
  margin-top: 4rpx;
  border: 0rpx solid #bbaacc;
}

.icon-item text {
  height: 100%;
  width: 60rpx;
  line-height: 60rpx;
  color: #fff;
  font-size: 42rpx;
  opacity: 0.23;
  float: right;
  text-align: right;
}

.main-item {
  width: 80%;
  height: 500rpx;
  margin-top: 210rpx;
  margin-left: auto;
  margin-right: auto;
  padding-top: 40rpx;
  position: relative;
  border: 0rpx solid orange;
}

.main-titleItem {
  width: 100%;
  height: 108rpx;
  border: 0rpx solid red;
  color: rgba(255, 255, 255, 100);
}

.main-title {
  height: 78rpx;
  width: 100%;
  line-height: 78rpx;
  font-size: 46rpx;
  text-align: center;
}

.main-tag {
  width: 100%;
  height: 30rpx;
  line-height: 30rpx;
  text-align: center;
  opacity: 0.25;
  font-size: 20rpx;
}

.main-selectItem {
  width: 100%;
  height: 210rpx;
  border: 0rpx solid red;
  display: flex;
  justify-content: space-around;
  flex-wrap: wrap;
  padding: 0 20rpx;
  padding-top: 30rpx;
}

.modal-selectBut {
  height: 60rpx;
  line-height: 60rpx;
}

.modal-selectBut button {
  height: 60rpx;
  width: 220rpx;
  padding: 0 20rpx;
  text-align: center;
  line-height: 60rpx;
  background-color: unset;
  font-size: 24rpx;
  color: #fff;
  font-weight: 700;
  border-radius: 0;
  border: 1px solid rgba(187, 187, 187, 100);
}

.main-butItem{
  height: 60rpx;
  width: 100%;
  border: 0rpx solid red;
  position: absolute;
  bottom: 14rpx;
}

.but{
  width: 300rpx;
  margin: auto;
  height: 100%;
}

.but button{
  height: 100%;
  width: 100%;
  line-height: 60rpx;
  background-image: -moz-linear-gradient( 92deg, rgb(113,73,253) 0%, rgb(88,179,255) 100%);
  background-image: -webkit-linear-gradient( 92deg, rgb(113,73,253) 0%, rgb(88,179,255) 100%);
  background-image: -ms-linear-gradient( 92deg, rgb(113,73,253) 0%, rgb(88,179,255) 100%);
  box-shadow: 0px 9px 24px 0px rgba(99, 133, 254, 0.3);
  color: #fff;
}
