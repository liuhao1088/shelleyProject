page{
  background-color: #f0f0f0;
}

.reservationActivityContainer {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 0 30rpx;
  padding-bottom: 60rpx;
}

.title {
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  color: #000;
  margin-top: 20rpx;
  font-size: 40rpx;
  padding-left: 30rpx;
}

.wrap {
  width: 100%;
  border-radius: 20rpx;
  background-color: #fff;
  margin-top: 20rpx;
  padding-bottom: 30rpx;
}

.wrap-titleItem {
  width: 100%;
  line-height: 120rpx;
  border-bottom: 2rpx solid rgba(0, 0, 0, 0.1);
  display: flex;
  padding-right: 20rpx;
}

.wrap-title {
  height: 100%;
  width: 280rpx;
  color: rgba(16, 16, 16, 100);
  font-size: 32rpx;
  padding-left: 30rpx;
  border: 0rpx solid red;
}

.wrap-input {
  flex: 1;
  border: 0rpx solid red;
  padding-left: 90rpx;
  color: rgba(125, 125, 125, 100);
}

.wrap-input input {
  height: 100%;
  width: 100%;
  font-size: 28rpx;

}

.placeholder {
  font-size: 28rpx;
}

.wrap-date {
  width: 100%;
  padding-bottom: 40rpx;
  border-bottom: 2rpx solid rgba(0, 0, 0, 0.1);
}

.wrap-dateItem {
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  border: 0rpx solid red;
  padding-right: 20rpx;
  margin-top: 40rpx;
  display: flex;
}

.wrap-textareaItem {
  width: 100%;
  padding-top: 40rpx;
}

.wrap-textarea {
  width: 100%;
  height: 300rpx;
  border-bottom: 2rpx solid rgba(0, 0, 0, 0.1);
  padding: 20rpx 30rpx;
}

textarea {
  height: 100%;
  width: 100%;
  background-color: rgba(255, 255, 255, 100);
  color: rgba(136, 136, 136, 100);
  border: 2rpx solid rgba(0, 0, 0, 0.1);
  border-radius: 10rpx;
  padding: 20rpx;
}

.but-item {
  height: 60rpx;
  width: 200rpx;
  border: 0rpx solid red;
  margin: auto;
}

.cu-btn {
  height: 100%;
  width: 100%;
  line-height: 60rpx;
  background-image: linear-gradient(133deg,#f92643 ,#e1001f,#ee0049);
  color: #fff;
}

/* 活动预览 */
.preview-item{
  width: 100%;
}

.preview-item image{
  height: 100%;
  width: 100%;
  border-radius: 20rpx;
  vertical-align: middle;
}