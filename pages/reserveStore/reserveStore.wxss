page {
  background-color: #fff;
}

.reserveStoreContainer {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.header {
  height: 500rpx;
  width: 100%;
  border: 0rpx solid black;
}

.header-imgItem {
  width: 100%;
  height: 450rpx;
  border: 0rpx solid black;
}

.header-imgItem image {
  height: 100%;
  width: 100%;
  vertical-align: middle;
}

.header-wrap {
  height: 322rpx;
  width: 100%;
  border: 0rpx solid red;
  position: relative;
  top: -276rpx;
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
}

.search {
  height: 64rpx;
  width: 90%;
  border-radius: 32rpx;
  background-color: rgb(255, 255, 255);
  display: flex;
}

.search text {
  height: 100%;
  width: 80rpx;
  border: 0rpx solid red;
  line-height: 64rpx;
  text-align: center;
  background-image: linear-gradient(#fe5327, #fd7e21);
  -webkit-background-clip: text;
  color: transparent;
}

.search input {
  height: 100%;
  flex: 1;
  border: 0rpx solid black;
  padding-left: 20rpx;
  padding-right: 20rpx;
}

.poster-item {
  width: 90%;
  height: 228rpx;
  margin-top: 30rpx;
  border: 0rpx solid black;
}

.poster-item image {
  height: 100%;
  width: 100%;
  vertical-align: middle;
}

.title-item {
  height: 52rpx;
  line-height: 52rpx;
  width: 90%;
  border: 0rpx solid red;
  display: flex;
}

.title-item text {
  height: 100%;
  width: 52rpx;
  font-size: 40rpx;
  background-image: linear-gradient(139deg, #fe5327, #fd7e21);
  -webkit-background-clip: text;
  color: transparent;
}

.title-tagItem {
  height: 100%;
  font-size: 34rpx;
}

.store-mainItem {
  width: 90%;
  padding-top: 20rpx;
}

.store-boxItem {
  width: 100%;
  height: 180rpx;
  border: 0rpx solid red;
  margin-bottom: 20rpx;
  border-radius: 6rpx;
}

.store-wrapItem {
  height: 100%;
  width: 100%;
  padding: 26rpx 32rpx;
  border: 0rpx solid red;
  display: flex;
}

.store-mainLeft {
  flex: 1;
  border: 0rpx solid red;
  padding-right: 20rpx;
  color: rgb(255, 255, 255);
}

.store-imgItem {
  height: 100%;
  width: 128rpx;
  border-radius: 10rpx;
  background-color: #fff;
}

.store-imgItem image {
  height: 100%;
  width: 100%;
  vertical-align: middle;
  border-radius: 10rpx;
}

.store-titleItem {
  width: 100%;
  height: 44rpx;
  line-height: 44rpx;
  font-size: 32rpx;
  font-weight: bold;
}

.store-address {
  width: 100%;
  height: 32rpx;
  line-height: 32rpx;
  font-size: 20rpx;
  display: block;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-top: 4rpx;
}

.store-tagItem {
  width: 100%;
  height: 32rpx;
  border: 0rpx solid red;
  margin-top: 8rpx;
  display: flex;

}

.store-tag {
  height: 100%;
  line-height: 32rpx;
  border-radius: 4rpx;
  font-size: 20rpx;
  text-align: center;
  background-image: linear-gradient(139deg, #fe5327, #fd7e21);
  padding: 0 16rpx;
}






