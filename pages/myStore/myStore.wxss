.myStoreContainer {
  /* height: 100%; */
  background-color: #1B222E;
}

.banner {
  width: 100%;
  height: 352rpx;
  background-color: red;
}

.wrapper {
  width: 100%;
  padding-bottom: 50rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
}

.wrapper-menu {
  height: 130rpx;
  width: 90%;
  margin-top: 20rpx;
  display: flex;
  justify-content: space-evenly;
  background-color: #fff;
  border-radius: 20rpx;
}

.topbar-item {
  width: calc(78%/2);
  height: 100%;
  border: 0rpx solid red;
  display: flex;
}

.topbar-icon {
  height: 100%;
  width: 60rpx;
  border: 0rpx solid orange;
}

.icon {
  line-height: 130rpx;
  font-size: 46rpx;
  text-align: center;
}

.topbar-guild {
  flex: 1;
  border: 0rpx solid black;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.topbar-title {
  width: 100%;
  height: 44rpx;
  line-height: 44rpx;
  opacity: 0.91;
  font-size: 36rpx;
  float: left;
  color: #121621;
}

.topbar-msg {
  width: 100%;
  height: 36rpx;
  opacity: 0.5;
  font-size: 20rpx;
  float: left;
}

.wrapper-main {
  width: 90%;
  margin-top: 20rpx;
  background-color: #fff;
  border-radius: 20rpx;
  padding: 32rpx 40rpx;
}

.title-item {
  height: 52rpx;
  line-height: 52rpx;
  font-size: 40rpx;
  padding-left: 10rpx;
  margin-bottom: 30rpx;
}

.live-content {
  height: 330rpx;
  border: 0rpx solid red;
  padding-bottom: 20rpx;
  display: flex;
}

.live-date {
  width: 110rpx;
  height: 100%;
  border: 0rpx solid red;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
}

.live-wrap{
  width: 100%;
  border: 0rpx solid black;
}

.live-main {
  flex: 1;
  border: 0rpx solid black;
  padding-left: 28rpx;
}

.date-item {
  width: 100%;
  line-height: 36rpx;
  font-size: 24rpx;
  color: rgba(105, 113, 254, 100);
  text-align: center;
}

.date-tag{
  width: 2rpx;
  height: 210rpx;
  border: 2rpx solid black;
}

.live-img {
  width: 100%;
  height: 172rpx;
  background-color: blueviolet;
  border-radius: 10rpx;
}

.live-title {
  width: 100%;
    height: 50rpx;
    margin: 20rpx 0;
}

.live-titleItem {
  line-height: 50rpx;
  font-size: 36rpx;
  float: left;
}

.live-but {
  height: 100%;
  width: 160rpx;
  float: right;
}

.live-but button {
  height: 100%;
  width: 100%;
  line-height: 50rpx;
  border-radius: 30rpx;
  background-color: rgba(105, 113, 254, 100);
  font-size: 24rpx;
  color: #fff;
}

.live-msg{
  line-height: 40rpx;
  opacity: 0.8;
  font-size: 20rpx;
}