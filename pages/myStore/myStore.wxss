.myStoreContainer {
  
}

.banner {
  width: 100%;
  height: 352rpx;
}

.banner image {
  height: 100%;
  width: 100%;
  vertical-align: middle;
}

.wrapper {
  width: 100%;
  padding-bottom: 50rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
}

.wrapper-menu {
  height: 130rpx;
  width: 90%;
  margin-top: 20rpx;
  display: flex;
  justify-content: space-evenly;
  background-color: #fff;
  border-radius: 20rpx;
}

.topbar-item {
  width: calc(78%/2);
  height: 100%;
  border: 0rpx solid red;
  display: flex;
}

.topbar-icon {
  height: 100%;
  width: 60rpx;
  border: 0rpx solid orange;
}

.icon {
  line-height: 130rpx;
  font-size: 46rpx;
  text-align: center;
}

.topbar-guild {
  flex: 1;
  border: 0rpx solid black;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.topbar-title {
  width: 100%;
  height: 44rpx;
  line-height: 44rpx;
  opacity: 0.91;
  font-size: 36rpx;
  float: left;
  color: #121621;
}

.topbar-msg {
  width: 100%;
  height: 36rpx;
  opacity: 0.5;
  font-size: 20rpx;
  float: left;
}

.wrapper-main {
  width: 90%;
  margin-top: 20rpx;
  background-color: #fff;
  border-radius: 20rpx;
  padding: 32rpx 40rpx;
}

.title-item {
  height: 52rpx;
  line-height: 52rpx;
  font-size: 40rpx;
  padding-left: 10rpx;
  margin-bottom: 30rpx;
}

.live-content {
  /*height: 330rpx;*/
  border: 0rpx solid red;
  padding-bottom: 20rpx;
  display: flex;
}

.live-date {
  width: 18%;
  height: 100%;
  border: 0rpx solid red;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
}

.live-wrap {
  width: 100%;
  border: 0rpx solid black;
}

.live-main {
  width:81%;
  border: 0rpx solid black;
  padding-left: 28rpx;
}

.date-item {
  width: 100%;
  line-height: 36rpx;
  font-size: 24rpx;
  color: rgb(225, 0, 31);
  text-align: center;
}

.date-tag {
  width: 2rpx;
  /*height:210rpx;*/
  border: 2rpx solid rgba(225, 0, 31, 0.3);
}

.live-img {
  width: 100%;
  height: 172rpx;
  background-color: rgb(209, 206, 206);
  border-radius: 10rpx;
}

.live-title {
  width: 100%;
  height: 50rpx;
  margin: 20rpx 0;
  position: relative;
}

.live-titleItem {
  width:65%;
  line-height: 50rpx;
  height: 50rpx;
  font-size: 36rpx;
  white-space: nowrap;
}

.live-but {
  height: 100%;
  width: 35%;
  position: absolute;
  right:0px;
}

.live-but button {
  height: 100%;
  width: 100%;
  line-height: 50rpx;
  border-radius: 30rpx;
  background-image: linear-gradient(133deg,#f92643 ,#e1001f,#ee0049);
  font-size: 24rpx;
  color: #fff;
}

.live-msg {
  line-height: 40rpx;
  opacity: 0.8;
  word-break:break-all;
  font-size: 23rpx;
  width:100%;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}


@keyframes kf-marque-animation{ 0% { transform: translateX(0); } 100% { transform: translateX(-33.3%); } }
.marquee{
  background: #fff;
  border: none;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: clip;
  position: relative;
  width:62%;
  line-height: 50rpx;
  height: 50rpx;
  font-size: 30rpx;
}
.marquee .content{
  display: inline-block;
  position: relative;
  padding-right: 0px;
  animation: kf-marque-animation 6.3s linear infinite;
  white-space: nowrap;
}

