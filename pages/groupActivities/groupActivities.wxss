.groupActivitiesContainer {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 0 30rpx;
  padding-bottom: 130rpx;
}

.title {
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  color: #fff;
  margin-top: 20rpx;
  font-size: 40rpx;
  padding-left: 30rpx;
}

.wrap {
  width: 100%;
  border-radius: 20rpx;
  background-color: #fff;
  margin-top: 20rpx;
  padding-bottom: 30rpx;
}

.wrap-titleItem {
  width: 100%;
  height: 120rpx;
  line-height: 120rpx;
  border-bottom: 2rpx solid black;
  display: flex;
  padding-right: 20rpx;
}

.wrap-title {
  height: 100%;
  width: 280rpx;
  color: rgba(16, 16, 16, 100);
  font-size: 28rpx;
  padding-left: 30rpx;
  border: 0rpx solid red;

}

.wrap-input {
  flex: 1;
  border: 0rpx solid red;
  padding-left: 50rpx;
  color: rgba(125, 125, 125, 100);
  font-size: 22rpx;
}

.wrap-input input {
  height: 100%;
  width: 100%;
  
}

.placeholder {
  font-size: 22rpx;
}

.wrap-dateItem {
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  border: 0rpx solid red;
  padding-right: 20rpx;
  margin-top: 40rpx;
  display: flex;
}

.input-item {
  width: 240rpx;
  height: 100%;
  border: 0rpx solid red;
  display: flex;
  font-size: 22rpx;
}

.text-item {
  height: 100%;
  line-height: 120rpx;
  float: left;
  color: #000;
}

.input {
  height: 100%;
  width: 70rpx;
  float: left;
}






/* 发布but */
.but-item {
  width: 100%;
  height: 100rpx;
  position: fixed;
  bottom: 0;
 
}

.but-item button{
  height: 100%;
  width: 100%;
  line-height: 100rpx;
  border-radius: 0;
  text-align: center;
  background-color: rgba(105, 113, 254, 100);
  color: rgba(255, 255, 255, 100);
  font-size: 28rpx;
}

.wrap-iconItem{
  height: 50rpx;
  width: 100%;
  line-height: 50rpx;
  font-size: 28rpx;
  text-align: center;
  color: rgba(16, 16, 16, 100);
  margin-top: 20rpx;
  opacity: 0.6;
}

.border{
  border-bottom: 2rpx solid #b5b5b5;
}