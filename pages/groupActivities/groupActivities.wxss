.groupActivitiesContainer {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 0 30rpx;
  padding-bottom: 130rpx;
}

.title {
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  color: #fff;
  margin-top: 20rpx;
  font-size: 40rpx;
  padding-left: 30rpx;
}

.wrap {
  width: 100%;
  border-radius: 20rpx;
  background-color: #fff;
  margin-top: 20rpx;
  padding-bottom: 30rpx;
}

.wrap-titleItem {
  width: 100%;
  height: 120rpx;
  line-height: 120rpx;
  border-bottom: 2rpx solid black;
  display: flex;
  padding-right: 20rpx;
}

.wrap-title {
  height: 100%;
  width: 280rpx;
  color: rgba(16, 16, 16, 100);
  font-size: 28rpx;
  padding-left: 30rpx;
  border: 0rpx solid red;

}

.wrap-input {
  flex: 1;
  border: 0rpx solid red;
  padding-left: 50rpx;
  color: rgba(125, 125, 125, 100);
  font-size: 22rpx;
}

.wrap-input input {
  height: 100%;
  width: 100%;
  
}

.placeholder {
  font-size: 22rpx;
}

.wrap-dateItem {
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  border: 0rpx solid red;
  padding-right: 20rpx;
  margin-top: 40rpx;
  display: flex;
}

.input-item {
  width: 240rpx;
  height: 100%;
  border: 0rpx solid red;
  display: flex;
  font-size: 22rpx;
}

.text-item {
  height: 100%;
  line-height: 120rpx;
  float: left;
  color: #000;
}

.input {
  height: 100%;
  width: 70rpx;
  float: left;
}






/* 发布but */
.but-item {
  width: 100%;
  height: 100rpx;
  position: fixed;
  bottom: 0;
 
}

.but-item button{
  height: 100%;
  width: 100%;
  line-height: 100rpx;
  border-radius: 0;
  text-align: center;
  background-color: rgba(105, 113, 254, 100);
  color: rgba(255, 255, 255, 100);
  font-size: 28rpx;
}

.wrap-iconItem{
  height: 50rpx;
  width: 100%;
  line-height: 50rpx;
  font-size: 28rpx;
  text-align: center;
  color: rgba(16, 16, 16, 100);
  margin-top: 20rpx;
  opacity: 0.6;
}

.border{
  border-bottom: 2rpx solid #b5b5b5;
}

.cu-btn.lg {
  font-size: 24rpx;
}


.cu-img{
  height: 100%;
  width: 200rpx;
  background-color:white;
  float: left;
  border-radius: 10rpx;
}

.cu-img image {
  height: 100%;
  width: 100%;
  vertical-align: middle;
  text-align: center; 
  border-radius: 10rpx;
}

.cu-description{
  flex: 1;
  text-align: left;
  padding-left: 20rpx;
  padding-bottom: 10rpx;
  font-size: 24rpx;
}

/* 活动预览 */

.preview-wrapTitle {
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 40rpx;
  text-align: center;
}

.tui-conutdown-box {
  display: inline-block;
  height: 50rpx;
  width: 50rpx;
  line-height: 50rpx;
  text-align: center;
  background-color: #000;
  color: #fff;
  margin: 0 10rpx;
}

.tui-countdown-bg {
  background-color: #DF0101;
}

.preview-couponItem {
  width: 95%;
  height: 250rpx;
  border-radius: 20rpx;
  text-align: center;
  box-shadow: 4rpx 4rpx 8rpx 0px rgba(0, 0, 0, 0.4);
  border: 2rpx solid rgba(255, 255, 255, 100);
  margin-top: 40rpx;
  display: flex;
  padding: 20rpx;
}

.preview-imgItem {
  height: 100%;
  width: 180rpx;
  border-radius: 6rpx;
  background-color: black;
}

.preview-wrapItem {
  flex: 1;
  border: 0rpx solid black;
  padding-left: 10rpx;
}

.preview-couponTitleItem {
  width: 100%;
  height: 44rpx;
  line-height: 44rpx;
  border: 0rpx solid red;
}

.preview-couponTitle {
  float: left;
  font-size: 32rpx;
}

.preview-couponAddress {
  opacity: 0.5;
  color: rgba(16, 16, 16, 100);
  font-size: 20rpx;
  float: right;
}

.preview-couponGroup {
  width: 100%;
  height: 66rpx;
  border: 0rpx solid red;
  display: flex;
  margin-top: 20rpx;
}

.coupon-main {
  flex: 1;
  border: 0rpx solid black;
}

.coupon-but {
  height: 90%;
  width: 120rpx;
  border: 0rpx solid rebeccapurple;
}

.but {
  height: 100%;
  width: 100%;
  line-height: 64rpx;
  background-color: #6971FE;
  border-radius: 10rpx;
  background-color: rgba(105, 113, 254, 100);
  color: rgba(255, 255, 255, 100);
  font-size: 20rpx;
}

.group-price {
  height: 100%;
  line-height: 78rpx;
  color: rgba(255, 0, 0, 100);
  font-size: 40rpx;
  float: left;
}

.price-item {
  height: 100%;
  line-height: 88rpx;
  opacity: 0.5;
  color: rgba(32, 41, 55, 100);
  font-size: 20rpx;
  float: left;
  padding-left: 20rpx;
  text-decoration: line-through;
}

.coupon-wrap {
  line-height: 28rpx;
  font-size: 20rpx;
  border: 0rpx solid black;
  padding-right: 10rpx;
  display: flex;
}

.coupon-user {
  flex: 1;
  border: 0rpx solid orange;
}

.coupon-msg {
  height: 100%;
  line-height: 28rpx;
  border: 0rpx solid red;
}

.top_swiper {
  width: 100%;
  height: 100%;
}

.swiper-img {
  height: 100%;
  width: 26rpx;
  background-color: red;
  border-radius: 50%;
  float: left;
}

.swiper-img image {
  height: 100%;
  width: 100%;
  border-radius: 50%;
  vertical-align: middle;
}

.swiper-name {
  height: 100%;
  width: 100rpx;
  line-height: 28rpx;
  justify-content: left;
  display: block;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  padding-left: 10rpx;
}