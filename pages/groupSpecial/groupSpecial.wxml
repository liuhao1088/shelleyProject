<view class="groupSpecialContainer">
  <view class="title"><text bindtap="toActivityRule">活动规则</text> </view>
  <view class="wrap">
    <view class="wrap-title">拼团特惠</view>
    <view class="wrap-title" style="font-size: 24rpx;margin-top: 20rpx;">{{days+hours+minutes+seconds=='00000000'?'活动已结束':'活动结束倒计时'}}：
      <text class='tui-conutdown-box'>{{days}}</text>天
      <text class='tui-conutdown-box'>{{hours}}</text>时
      <text class='tui-conutdown-box'>{{minutes}}</text>分
      <text class='tui-conutdown-box tui-countdown-bg'>{{seconds}}</text>秒
    </view>

    <view class="coupon-item" wx:for="{{data.shopping}}" data-index="{{index}}">
      <view class="img-item align-center"><image style="height:190rpx;width:180rpx;" src="{{item.link}}" /></view>
      <view class="wrap-item">
        <view class="coupon-titleItem">
          <text class="coupon-title">{{item.name}}</text>
          <text class="coupon-address">{{data.shop[0].shop_name}}专用</text>
        </view>

        <view class="coupon-group">
          <swiper class="top_swiper" circular vertical interval="2000" autoplay>
            <swiper-item wx:for="{{userList}}" wx:key="id" style="display: flex;" bindtap="showModal"
              data-target="goGroup">
              <view class="coupon-main">
                <view class="coupon-wrap">
                  <view class="coupon-user">
                    <view class="swiper-img">
                      <image src="{{item.img}}"></image>
                    </view>
                    <view class="swiper-name">{{item.name}}</view>
                  </view>
                  <view class="coupon-msg">还差 <text style="color: red;">1</text> 人拼成</view>
                </view>
                <view class="coupon-wrap" style="padding-top: 6rpx;">剩余时间：{{countdown}}</view>
              </view>
              <view class="coupon-but">
                <button class="but">去拼团</button>
              </view>
            </swiper-item>
          </swiper>
        </view>

        <view class="coupon-group">
          <view class="coupon-main">
            <view class="group-price">¥ {{item.price}}</view>
            <view class="price-item">原价：¥ {{item.original_price}}</view>
          </view>
          <view class="coupon-but">
            <button class="but"
              style="background-color: rgba(255, 255, 255, 100);color: rgba(105, 113, 254, 100);border: 2rpx solid rgba(105, 113, 254, 100);padding: 0;"
              bindtap="showModal" data-target="initiateGroup">发起拼团</button>
          </view>
        </view>
      </view>
    </view>

  </view>
</view>

<!-- 发起拼团弹窗 -->
<view class="cu-modal {{modalName=='initiateGroup'?'show':''}}">
  <view class="cu-dialog">
    <view class="cu-bar bg-white justify-end">
      <view class="content"></view>
      <view class="action" bindtap="hideModal">
        <text class="cuIcon-close text-gray"></text>
      </view>
    </view>
    <view class="padding-xl">
      <view class="icon-item">
        <text class="iconfont iconqueren" style="font-size: 120rpx;"></text>
      </view>
      <view class="modal-item">仅剩<text style="color:red;">1</text>个席位，{{countdown}}后结束，赶快邀请好友来拼团吧！~</view>
      <view class="modal-but">
        <view class="but-item">
          <button class="turn-but" bindtap="toMyCoupon">查看拼团券</button>
        </view>
        <view class="but-item">
          <button class="share-but" open-type='share'>分享给好友</button>
        </view>
      </view>
    </view>
  </view>
</view>

<!--去拼团弹窗  -->
<view class="cu-modal {{modalName=='goGroup'?'show':''}}">
  <view class="cu-dialog">
    <view class="cu-bar bg-white justify-end">
      <view class="content"></view>
      <view class="action" bindtap="hideModal">
        <text class="cuIcon-close text-gray"></text>
      </view>
    </view>
    <view class="padding-xl">
      <view class="modal-title">参与产品名称1的拼团</view>
      <view class="modal-item" style="margin-top: 20rpx;">仅剩<text style="color:red;">1</text>个席位，{{countdown}}后结束</view>
      <view class="modal-userItem">
        <view class="fight-master">
          <image style=""></image>
          <view class="user-item">拼主</view>
        </view>
        <view class="modal-box">
          <text class="iconfont iconwenhao" style="font-size: 50rpx;"></text>
        </view>
      </view>
      <view class="join-but">
        <button bindtap="showModal" data-target="goGroupSuccess">加入拼团</button>
      </view>
    </view>
  </view>

</view>

<!-- 去拼团成功弹窗 -->
<view class="cu-modal {{modalName=='goGroupSuccess'?'show':''}}">
  <view class="cu-dialog">
    <view class="cu-bar bg-white justify-end">
      <view class="content"></view>
      <view class="action" bindtap="hideModal">
        <text class="cuIcon-close text-gray"></text>
      </view>
    </view>
    <view class="padding-xl">
      <view class="icon-item">
        <text class="iconfont iconqueren" style="font-size: 120rpx;"></text>
      </view>
      <view class="modal-title">拼团成功</view>
      <view class="modal-msg">拼团券领取成功,邀请好友，享受更多福利</view>
      <view class="modal-but">
        <view class="but-item">
          <button class="turn-but" bindtap="toMyCoupon">去使用</button>
        </view>
        <view class="but-item">
          <button class="share-but" style="font-size: 24rpx;" bindtap="toReserveStore">查看可用门店</button>
          <!-- <button class="share-but" bindtap="showModal" data-target="question">再减100元</button> -->
        </view>
      </view>
    </view>
  </view>
</view>

<!-- 问答 -->
<view class="cu-modal {{modalName=='question'?'show':''}}">
  <view class="cu-dialog">
    <view class="cu-bar bg-white justify-end">
      <view class="content"></view>
      <view class="action" bindtap="hideModal">
        <text class="cuIcon-close text-gray"></text>
      </view>
    </view>
    <view class="padding-xl">
      <view class="modal-img">
        <image src=""></image>
      </view>
      <view class="modal-wrap">
        <view class="modal-selectBut" wx:for="{{checkbox}}" wx:key="id">
          <button class="{{item.checked?'line':''}}" bindtap="ChooseCheckbox" id="{{item.id}}">{{item.name}}</button>
        </view>
      </view>
      <view class="modal-questionBut">
        <button>立即领取并使用</button>
      </view>
    </view>
  </view>
</view>