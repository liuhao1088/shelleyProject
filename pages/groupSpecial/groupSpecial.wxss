.groupSpecialContainer {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 0 30rpx;
}

.title {
  /* height: 50rpx; */
  width: 100%;
  text-align: right;
  opacity: 0.5;
  color: rgba(255, 255, 255, 100);
  font-size: 28rpx;
  padding: 20rpx 40rpx;
}

.wrap {
  width: 100%;
  background-color: #fff;
  border-radius: 40rpx;
  box-shadow: 2rpx 2rpx 12rpx 0px rgba(0, 0, 0, 0.4);
  padding: 50rpx 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
}

.wrap-title {
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 40rpx;
  text-align: center;
}

.coupon-item {
  width: 95%;
  height: 250rpx;
  border-radius: 20rpx;
  text-align: center;
  box-shadow: 4rpx 4rpx 8rpx 0px rgba(0, 0, 0, 0.4);
  border: 2rpx solid rgba(255, 255, 255, 100);
  margin-top: 40rpx;
  display: flex;
  padding: 20rpx;
}

.img-item {
  height: 100%;
  width: 180rpx;
  background-color: red;
}

.wrap-item {
  flex: 1;
  border: 0rpx solid black;
  padding-left: 10rpx;
}

.coupon-titleItem {
  width: 100%;
  height: 44rpx;
  line-height: 44rpx;
  border: 0rpx solid red;
}

.coupon-title {
  float: left;
  font-size: 32rpx;
}

.coupon-address {
  opacity: 0.5;
  color: rgba(16, 16, 16, 100);
  font-size: 20rpx;
  float: right;
}

.coupon-group {
  width: 100%;
  height: 66rpx;
  border: 0rpx solid red;
  display: flex;
  margin-top: 20rpx;
}

.coupon-main {
  flex: 1;
  border: 0rpx solid black;
}

.coupon-but {
  height: 90%;
  width: 120rpx;
  border: 0rpx solid rebeccapurple;
}

.but {
  height: 100%;
  width: 100%;
  line-height: 64rpx;
  background-color: #6971FE;
  border-radius: 10rpx;
  background-color: rgba(105, 113, 254, 100);
  color: rgba(255, 255, 255, 100);
  font-size: 20rpx;
}

.group-price {
  height: 100%;
  line-height: 78rpx;
  color: rgba(255, 0, 0, 100);
  font-size: 40rpx;
  float: left;
}

.price-item {
  height: 100%;
  line-height: 88rpx;
  opacity: 0.5;
  color: rgba(32, 41, 55, 100);
  font-size: 20rpx;
  float: left;
  padding-left: 20rpx;
  text-decoration: line-through;
}

.coupon-wrap {
  width: 100%;
  line-height: 28rpx;
  font-size: 20rpx;
  border: 0rpx solid black;
  padding-right: 10rpx;
  display: flex;
}

.coupon-user {
  flex: 1;
  border: 0rpx solid orange;
}

.coupon-msg {
  height: 100%;
  line-height: 28rpx;
  border: 0rpx solid red;
}

.top_swiper {
  width: 100%;
  height: 100%;
}

.swiper-img {
  height: 100%;
  width: 26rpx;
  background-color: orangered;
  float: left;
}

.swiper-img image {
  height: 100%;
  width: 100%;
  border-radius: 50%;
  vertical-align: middle;
}

.swiper-name {
  height: 100%;
  line-height: 28rpx;
  float: left;
  display: block;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  padding-left: 10rpx;
}