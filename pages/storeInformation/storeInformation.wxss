page{
  background-color: #f0f0f0;
}

.storeInformationContainer {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
}

.wrap {
  width: 90%;
  background-color: #ffffff;
  margin-top: 20rpx;
  border-radius: 20rpx;
  font-size: 28rpx;
  padding: 30rpx 0rpx;
}

.wrap-update {
  height: 30rpx;
  line-height: 30rpx;
  text-align: right;
  font-size: 24rpx;
  opacity: 0.5;
  padding: 0rpx 40rpx;
}

.update {
  font-size: 20rpx;
  margin-left: 10rpx;
}

.wrap-main {
  width: 100%;
  line-height: 40rpx;
  border: 0rpx solid red;
  display: flex;
  margin-top: 20rpx;
  font-size: 28rpx;
  padding: 0rpx 40rpx;
}


.wrap-title {
  width: 200rpx;
  font-size: 28rpx;
  text-align: center;
}

.wrap-msg {
  flex: 1;
  border: 0rpx solid black;
  padding-left: 40rpx;
}

.wrap-img {
  height: 100%;
  width: 120rpx;
  border-radius: 10rpx;
}

.wrap-tag {
  width: 100%;
  height: 40rpx;
  line-height: 40rpx;
  border: 0rpx solid red;
  margin-top: 50rpx;
  color: rgb(255, 255, 255);
  font-size: 20rpx;
  background-image: linear-gradient(133deg,#f92643 ,#e1001f,#ee0049);
  text-align: center;
  border-radius:4rpx;
}

.footer{
  width: 100%;
  /* position: fixed;
  bottom: 0; */
}

image{
  height: 100%;
  width: 100%;
  vertical-align: middle;
}